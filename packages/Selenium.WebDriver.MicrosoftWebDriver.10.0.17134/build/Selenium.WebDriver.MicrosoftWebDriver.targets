<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <MSWebDriverSrcPath>$(MSBuildThisFileDirectory)..\driver\MicrosoftWebDriver.exe</MSWebDriverSrcPath>
    <MSWebDriverTargetPath Condition=" '$(MSWebDriverTargetPath)' == '' ">$(TargetDir)</MSWebDriverTargetPath>
  </PropertyGroup>
  <!-- Detect is project type Web or Not. -->
  <Choose>
    <When Condition="'$(ProjectTypeIsWeb)' == ''">
      <PropertyGroup>
        <!-- Reference: http://www.mztools.com/Articles/2008/MZ2008017.aspx -->
        <!-- HKEY_LOCAL_MACHINE\SOFTWARE\WOW6432Node\Microsoft\VisualStudio\14.0\Projects -->
        <ProjectTypeIsWeb Condition="$([System.Text.RegularExpressions.Regex]::IsMatch($(ProjectTypeGuids),'^(.*;)*{349c5851-65df-11da-9384-00065b846f21}(;.*)*$'))">true</ProjectTypeIsWeb>
        <ProjectTypeIsWeb Condition="'$(ProjectTypeIsWeb)' == ''">false</ProjectTypeIsWeb>
      </PropertyGroup>
    </When>
  </Choose>
  <!-- Detect definition of compilation symbol that is "_PUBLISH_MSWEBDRIVER", or "PublishMSWebDriver" msbuild property. -->
  <Choose>
    <When Condition="'$(PublishMSWebDriver)' == ''">
      <PropertyGroup>
        <PublishMSWebDriver Condition="$([System.Text.RegularExpressions.Regex]::IsMatch($(DefineConstants),'^(.*;)*_PUBLISH_MSWEBDRIVER(;.*)*$'))">true</PublishMSWebDriver>
        <PublishMSWebDriver Condition="'$(PublishMSWebDriver)' == ''">false</PublishMSWebDriver>
      </PropertyGroup>
    </When>
  </Choose>
  <!-- Setup driver file as project item if publishing driver file is enabled. -->
  <Choose>
    <When Condition="'$(PublishMSWebDriver)|$(ProjectTypeIsWeb)' == 'true|true'">
      <ItemGroup>
        <None Include="$(MSWebDriverSrcPath)">
          <Link>MicrosoftWebDriver.exe</Link>
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Visible>False</Visible>
        </None>
      </ItemGroup>
    </When>
    <When Condition="'$(PublishMSWebDriver)|$(ProjectTypeIsWeb)' == 'true|false'">
      <ItemGroup>
        <Content Include="$(MSWebDriverSrcPath)">
          <Link>MicrosoftWebDriver.exe</Link>
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Visible>False</Visible>
        </Content>
      </ItemGroup>
    </When>
  </Choose>
  <!-- If publishing driver file is disabled (it's default behavior), define "copy" and "clean" build task. -->
  <Target Name="CopyMSWebDriverToBin" BeforeTargets="AfterBuild" Condition="'$(PublishMSWebDriver)' == 'false'">
    <Copy SourceFiles="$(MSWebDriverSrcPath)" DestinationFiles="$(MSWebDriverTargetPath)MicrosoftWebDriver.exe" SkipUnchangedFiles="true"></Copy>
  </Target>
  <Target Name="DeleteMSWebDriverFromBin" BeforeTargets="AfterClean" Condition="'$(PublishMSWebDriver)' == 'false'">
    <Delete Files="$(MSWebDriverTargetPath)MicrosoftWebDriver.exe"></Delete>
  </Target>
</Project>